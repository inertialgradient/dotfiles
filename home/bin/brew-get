#!/bin/bash

# Fuzzy-select a homebrew package to install

if [[ "$1" == "cask" ]]; then
  package=$(brew cask search | sed '1 d' | fzf)
  subcommand='cask'
elif [[ -z "$1" ]]; then
  package=$(brew search | fzf)
  subcommand=''
fi

if [[ -z $package ]]; then
  echo 'No package selected.'
  exit 1
fi

echo "brew $subcommand install $package"
brew $subcommand install $package
