#!/bin/bash

# Fuzzy-select a homebrew package to install

if [[ "$1" == "cask" ]]; then
  package=$(brew cask search | sed "1 d" | pick)
  echo "brew cask install $package"
  brew cask install $package
elif [[ -z "$1" ]]; then
  package=$(brew search | pick)
  echo "brew install $package"
  brew install $package
fi
