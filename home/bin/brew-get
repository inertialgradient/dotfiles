#!/bin/bash

# Fuzzy-select a homebrew package to install
#
# Usage:
#   brew get [cask]
#

set -e

if [[ ! $1 =~ ^(cask)*$ ]]; then
  echo "Usage: brew get [cask]"
  exit 1
fi

# select from packages available to download
package="$(brew select search $1)"

if [[ -z "$package" ]]; then
  echo "No package selected."
  exit 1
fi

echo "brew $1 install $package"
brew $1 install $package
