#!/usr/bin/env bash

# Delete local and remote branch `name`:
#
# Usage: git delete-branch [rem]
#
# TODO: enable multi-select for both, iterating through list in rem delete mode

# delete remote branch if `rem` passed
if [[ $1 == "rem" ]]; then
  branch="$(git branch | cut -c 3- | fzf-tmux -d 20 --extended-exact --no-multi)"
  test -z "$branch" && exit 0

  remote="$(git config branch.$branch.remote)"
  test -z "$remote" && remote="origin"

  ref="$(git config branch.$branch.merge)"
  test -z $ref && ref="refs/heads/$branch"

  # delete local remote-tracking reference
  git branch -d -r $remote/$branch

  # delete the remote branch
  git push $remote :$ref

  # delete the local branch
  git branch -D $branch

  exit 0
fi

branches="$(git branch | cut -c 3- | fzf-tmux -d 20 --extended-exact)"
test -z "$branches" && exit 0

# delete local branches
git branch -D $branches
