#!/usr/bin/env bash

#
# kill-port
#
# List all processes listening on TCP ports, kill any selected.
#
# Options:
#   -h    display this message
#

set -e

usage() {
    grep '^#' < "$0" | tail -n +2 | cut -c 3-
}

while [ $# -gt 0 ]; do
    case "$1" in
        -h|--help)
            usage
            exit 2
            ;;
        -*)
            echo "Unknown argument: $1" 1>&2
            usage
            exit 1
            ;;
    esac
done

listeners="$(lsof -wnP -i tcp)"
test -z "$listeners" && exit 0

pids="$(echo "$listeners" |\
        awk '{ printf("%-15s%-10s%-10s%-20s\n", $1, $2, $8, $9) }' |\
        fzf-tmux -d 30 --exact --multi --reverse --no-sort --border |\
        awk '{ print $2 }' |\
        sort --unique |\
        grep --invert-match PID |\
        tr '\n' ' ')"
test -z "$pids" && exit 0

echo "kill $pids"
eval kill "${pids[@]}"
