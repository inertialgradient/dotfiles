#!/bin/bash

# Fuzzy-select a homebrew package to uninstall

set -e

if [[ ! $1 =~ ^(cask)*$ ]]; then
  echo "Usage: brew kill [cask]"
  exit 1
fi

# select from packages available to uninstall
package="$(brew select list $1)"

if [[ -z "$package" ]]; then
  echo "No package selected."
  exit 1
fi

echo "brew $1 uninstall $package"
brew $1 uninstall $package
