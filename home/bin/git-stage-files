#!/usr/bin/env bash

# `git add` with fuzzy-selection
#
# Usage:
#   git stage-files
#   git stage-files file1 file2

if [[ ! -z "$1" ]]; then
  echo git add "$@"
  git add "$@"
  exit 0
fi

# fuzzy-select files
files="$(git select-files)"

if [[ ! -z $files ]]; then
  echo "git add $files"
  git add $files
  git status -sb
fi
