[user]
    name  = "Jake Romer"
    email = jkrmr@users.noreply.github.com

[github]
    user = jkrmr

[include]
    path = ~/.gitconfig.local

[branch]
    autosetuprebase = always

[color]
    ui = true

[commit]
    template = ~/.dotfiles/git/gitmessage

[core]
    autocrlf     = input
    editor       = vim
    excludesfile = ~/.dotfiles/git/gitignore

[diff]
    renames = true
    tool    = vimdiff

[fetch]
    prune = true

[filter "media"]
    clean  = git-media-clean %f
    smudge = git-media-smudge %f

[init]
    templatedir = ~/.dotfiles/git

[interactive]
    singlekey = true

[merge]
    conflictstyle = diff3
    ff            = only
    prompt        = false
    tool          = vimdiff

[mergetool]
    keepBackup = false

[pager]
    diff  = true
    log   = true
    stash = false

[pretty]
    brief = "%Cred%h%Creset %C(bold blue)%aN%Creset %Cgreen%cr%Creset - %s %C(yellow)%d%Creset"

[push]
    default = simple

[pull]
    rebase  = true

[rerere]
    enabled = true

[rebase]
    autosquash = true

[alias]
    a        = add
    aa       = add --all
    ap       = add --patch
    b        = branch -vv
    bn       = checkout -b
    bdel     = branch -D
    br       = browse
    c        = commit -v
    ca       = commit-amend
    cb       = create-branch
    cm       = !sh -c 'git commit -m \"$*\"' -
    cmf      = !sh -c 'git commit --fixup :/\"$*\"' -
    cms      = !sh -c 'git commit --squash :/\"$*\"' -
    co       = checkout
    cob      = checkout-branch
    cp       = cherry-pick
    cours    = checkout --ours
    ctheirs  = checkout --theirs
    d        = diff
    db       = delete-branch
    ds       = diff --staged
    dump     = cat-file -p
    f        = fetch
    h        = log --format=brief --graph --abbrev-commit
    hb       = log --format=brief --graph --abbrev-commit HEAD --not origin/master
    hh       = !sh -c 'git h | head'
    hdiff    = log --format=brief --graph -U1 --word-diff --color-words
    hfiles   = log --format=medium --graph --abbrev-commit --stat
    hsince   = !sh -c 'git h --since=$1' -
    hstat    = log --format=brief --graph --abbrev-commit --stat
    i        = init
    m        = merge
    ma       = merge --abort
    mc       = merge --continue
    mt       = mergetool
    p        = push
    po       = push origin
    poh      = !sh -c 'git push origin && git push heroku' -
    pu       = push -u
    pom      = push origin master
    psm      = push staging master
    ppm      = push production master
    pr       = pull-request
    r        = rebase
    ra       = rebase --abort
    rc       = rebase --continue
    rem      = remote -v
    rmc      = remove-commit
    s        = stash
    sa       = !sh -c 'git stash apply stash@{$1}' -
    sd       = !sh -c 'git stash drop stash@{$1}' -
    ss       = !sh -c 'git stash show stash@{$1}' -
    su       = stash --include-untracked
    sl       = stash list
    sp       = stash pop
    squash   = rebase -i master
    type     = cat-file -t
    up       = !git fetch origin && git rebase origin/master

    # git flow
    hf       = log --format=brief --graph --abbrev-commit HEAD --not origin/develop
    sqfeat   = rebase -i develop
    upfeat   = !git fetch origin && git rebase origin/develop
