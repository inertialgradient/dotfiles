#!/usr/bin/env bash

#
# random_phrase
#
# Usage:
#   random_phrase
#
# Generate a two-word phrase of random words
#

DICT="/usr/share/dict/words"

NUM_WORDS=$(wc -l $DICT | awk -F " " '{print $1}')
NUM_DIGITS=${#NUM_WORDS}

while true
do
    NUM=""
    for ((i=0; i<$NUM_DIGITS; i++))
    do
        DIGIT=$(($RANDOM%10))
        NUM="$NUM$DIGIT"
    done

    if [ $NUM -le $NUM_WORDS ]
    then
        break
    fi
done

WORD1=$(head -n $NUM $DICT |tail -n 1)

while true
do
    NUM=""
    for ((i=0; i<$NUM_DIGITS; i++))
    do
        DIGIT=$(($RANDOM%10))
        NUM="$NUM$DIGIT"
    done

    if [ $NUM -le $NUM_WORDS ]
    then
        break
    fi
done

WORD2=$(head -n $NUM $DICT |tail -n 1)

echo "$WORD1 $WORD2" | ruby -pe '$_.downcase'
