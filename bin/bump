#!/usr/bin/env bash

set -x

# Update Dotfiles
# ---------------------
(cd ~/.dotfiles && git pull --rebase --autostash)
(cd ~/.dotfiles && git submodule foreach 'git pull origin')

# Update Emacs config
# ---------------------
doom upgrade
doom sync

# Update Vim packages
# ---------------------
vim +PlugInstall +PlugUpgrade +PlugUpdate +qall

# Update Homebrew packages
# --------------------------
brew update
brew upgrade
brew cleanup
