#!/usr/bin/ruby
# frozen_string_literal: true

# rubocop:disable Layout/EmptyLinesAroundBlockBody
require_relative "../lib/bootstrap"

ensure_xcode_is_set_up
ensure_gpg_permissions_are_set_correctly
ensure_locals_are_created

setup :xdg_base_directory_environment do
  install_launchagent "com.tensorconclave.xdg"
  install_system_zshenv
end

setup :homebrew do
  install_homebrew
end

setup :emacs_plus do
  brew_tap "d12frosted/emacs-plus"
  brew_install :emacs_plus, options: %i[
    with_compress_install
    with_imagemagick
    with_xwidgets
  ]
end

setup :emacs_mac, default: false do
  brew_tap "railwaycat/emacsmacport"
  brew_install :emacs_mac, options: %i[
    with_emacs_big_sur_icon
    with_imagemagick
    with_librsvg
    with_native_compilation
    with_no_title_bars
    with_starter
    with_xwidgets
  ]
end

setup :editors do

  brew_install :vim
  cask_install :marked
  cask_install :obsidian
  cask_install :visual_studio_code
  cask_install :zed

end

setup :mac_tools do

  brew_install :osxutils
  brew_install :pinentry_mac
  brew_install :reattach_to_user_namespace
  brew_install :trash
  cask_install :karabiner_elements

end

