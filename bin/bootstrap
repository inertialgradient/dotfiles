  brew_install :parallel
  brew_install :pngpaste
  brew_install :ripgrep
  brew_install :shfmt
  brew_install :watch
  brew_install :wdiff
  brew_install :wget

end

setup :build_tools do

  brew_install :bzip2
  brew_install :cmake
  brew_install :gcc
  brew_install :gettext
  brew_install :glslang
