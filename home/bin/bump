#!/usr/bin/env bash

set -e

echo
echo Updating Homebrew packages
echo --------------------------
echo brew update
brew update
echo brew upgrade
brew upgrade
echo brew cleanup
brew cleanup

echo
echo Updating Emacs config
echo ---------------------
(cd ~/.emacs.d && git pull)

echo
echo Updating Vim packages
echo ---------------------
echo nvim +PlugInstall +PlugUpgrade +PlugUpdate +qall
nvim +PlugInstall +PlugUpgrade +PlugUpdate +qall
