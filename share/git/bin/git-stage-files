#!/usr/bin/env bash

# `git add` with fuzzy-selection
#
# Usage:
#   git stage-files
#   git stage-files file1 file2

set -e

if [[ -n "$1" ]]; then
  echo git add "$@"
  git add "$@"
  exit 0
fi

files="$(git status --porcelain | grep -E '^.[MD\?]' | awk '{print $2}')"
if [[ -z "${files}" ]]; then
  echo "No unstaged files"
  exit 0
fi

# fuzzy-select files
gitroot="$(git rev-parse --show-toplevel)"
selection=$(
  echo "${files}" |
    fzf \
      --multi \
      --tiebreak=index \
      --layout=reverse \
      $1 \
      --preview-window='right,70%' \
      --preview="echo {} | sed \"s@^@${gitroot}/@\" | xargs git-stage-files-preview"
)

if [[ -z "${selection}" ]]; then
  exit 0
fi

IFS=$'\n'

\cd "${gitroot}"

git add ${selection}

\cd - >/dev/null

git status -sb
